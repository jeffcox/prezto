#
# Defines environment variables.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ ( "$SHLVL" -eq 1 && ! -o LOGIN ) && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

# Set environment variables for virtualenvwrapper
export PROJECT_HOME="$HOME/src"
export VIRTUALENVWRAPPER_PYTHON=$(whence python3)
export VIRTUALENVWRAPPER_VIRTUALENV=$(whence virtualenv)
export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--system-site-packages'
export WORKON_HOME=$HOME/.virtualenvs

# Disable Eternal Terminal telemtry
export ET_NO_TELEMETRY=true

# ara
ANSIBLE_CALLBACK_PLUGINS="$(python3 -m ara.setup.callback_plugins)"
ARA_API_CLIENT=http
ARA_API_SERVER="https://ara"

# awx things that change more often
export TOWER_FORMAT=human
export TOWER_HOST="https://awx"
export TOWER_VERIFY_SSL=false
export TOWER_USERNAME=$USER
